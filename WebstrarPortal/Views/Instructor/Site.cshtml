@model WebstrarPortal.Models.SiteOverview
@{
    ViewData["Title"] = $"Site {Model.SiteNumber}";
    var asurite = ViewBag.Asurite as string;
    var serviceBase = ViewBag.ServiceBaseUrl as string;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/instructor?asurite=@asurite">All Sites</a></li>
        <li class="breadcrumb-item active">website@(Model.SiteNumber)</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>website@(Model.SiteNumber)</h2>
        <p class="text-muted mb-0">
            Team:
            @foreach (var a in Model.Asurites)
            {
                <span class="badge bg-secondary me-1">@a</span>
            }
        </p>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var slot in Model.Pages)
    {
        var borderClass = slot.HasContent ? (slot.HasDefaultAspx ? "border-success" : "border-warning") : "border-secondary";
        var badgeClass = slot.HasContent ? "bg-success" : "bg-secondary";
        var statusText = slot.HasContent ? $"{slot.FileCount} file(s)" : "Empty";

        <div class="col">
            <div class="card h-100 @borderClass">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>@slot.Name</strong>
                    <span class="badge @badgeClass">@statusText</span>
                </div>
                <div class="card-body">
                    @if (slot.HasContent)
                    {
                        @* Default.aspx status â€” different messaging for Page0 vs sub-pages *@
                        <p class="card-text small mb-1">
                            @if (slot.Index == 0)
                            {
                                if (slot.HasDefaultAspx)
                                {
                                    <span class="text-success fw-bold">&#10003; Default.aspx found</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">&#10007; Default.aspx missing (required)</span>
                                }
                            }
                            else
                            {
                                if (slot.HasDefaultAspx)
                                {
                                    <span class="text-success fw-bold">&#10003; Default.aspx found</span>
                                }
                                else
                                {
                                    <span class="text-muted" title="This page may be accessed via direct link or referenced from Page0.">No Default.aspx (sub-page) &#9432;</span>
                                }
                            }
                        </p>
                        @if (slot.LastModified.HasValue)
                        {
                            <p class="card-text text-muted small mb-3">
                                Uploaded: @slot.LastModified.Value.ToString("yyyy-MM-dd HH:mm UTC")
                            </p>
                        }

                        @* Smart View Live Page link *@
                        var instrLiveUrl = slot.EntryFile != null
                            ? $"{serviceBase}/sites/website{Model.SiteNumber}/{slot.Name}/{slot.EntryFile}"
                            : $"/instructor/site/{Model.SiteNumber}/page/{slot.Name}/files?asurite={asurite}";
                        var instrTarget = slot.EntryFile != null ? "_blank" : "_self";
                        var instrLabel = slot.EntryFile != null ? "View Live Page" : "Browse Files to View";
                        <div class="d-grid gap-2">
                            <a href="@instrLiveUrl" target="@instrTarget" class="btn btn-outline-success btn-sm">
                                @instrLabel
                            </a>
                            <a href="/instructor/site/@(Model.SiteNumber)/page/@(slot.Name)/files?asurite=@asurite"
                               class="btn btn-outline-primary btn-sm">
                                Browse Files
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="card-text text-muted small">No content uploaded.</p>
                    }
                </div>
            </div>
        </div>
    }
</div>
