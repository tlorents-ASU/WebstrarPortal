@model WebstrarPortal.Models.SiteOverview
@{
    ViewData["Title"] = $"Site {Model.SiteNumber}";
    var asurite = ViewBag.Asurite as string;
    var serviceBase = ViewBag.ServiceBaseUrl as string;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/instructor?asurite=@asurite">All Sites</a></li>
        <li class="breadcrumb-item active">website@(Model.SiteNumber)</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>website@(Model.SiteNumber)</h2>
        <p class="text-muted mb-0">
            Team:
            @foreach (var a in Model.Asurites)
            {
                <span class="badge bg-secondary me-1">@a</span>
            }
        </p>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var slot in Model.Pages)
    {
        // Border logic: green if Default.aspx OR exactly 1 .aspx; yellow if multiple .aspx or has files but no .aspx; gray if empty
        string borderClass;
        if (!slot.HasContent)
        {
            borderClass = "border-secondary";
        }
        else if (slot.HasDefaultAspx || slot.AspxFiles.Count == 1)
        {
            borderClass = "border-success";
        }
        else
        {
            borderClass = "border-warning";
        }

        var badgeClass = slot.HasContent ? "bg-success" : "bg-secondary";
        var statusText = slot.HasContent ? $"{slot.FileCount} file(s)" : "Empty";

        <div class="col">
            <div class="card h-100 @borderClass">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>@slot.Name</strong>
                    <span class="badge @badgeClass">@statusText</span>
                </div>
                <div class="card-body">
                    @if (slot.HasContent)
                    {
                        @* Status text â€” 15px, bold *@
                        <p class="card-text mb-1" style="font-size: 15px; font-weight: 700;">
                            @if (slot.HasDefaultAspx)
                            {
                                <span class="text-success">&#10003; Default.aspx found</span>
                            }
                            else if (slot.Index == 0)
                            {
                                <span class="text-danger">&#10007; Default.aspx missing (required)</span>
                            }
                            else if (slot.AspxFiles.Count == 1)
                            {
                                <span class="text-success">&#10003; Contains 1 .aspx entry point</span>
                            }
                            else if (slot.AspxFiles.Count > 1)
                            {
                                <span style="color: #bb140a;">Contains @slot.AspxFiles.Count .aspx files</span>
                            }
                            else
                            {
                                <span style="color: #bb140a;">No .aspx files</span>
                            }
                        </p>
                        @if (!slot.HasDefaultAspx && slot.AspxFiles.Count > 1)
                        {
                            <p class="card-text text-muted small mb-1">
                                No Default.aspx &mdash; use direct links to each .aspx file (e.g. /@(slot.Name)/Login.aspx)
                            </p>
                        }
                        else if (!slot.HasDefaultAspx && slot.AspxFiles.Count == 0 && slot.Index != 0)
                        {
                            <p class="card-text text-muted small mb-1">
                                No .aspx entry points found &mdash; visitors must link to specific files
                            </p>
                        }
                        @if (slot.LastModified.HasValue)
                        {
                            <p class="card-text text-muted small mb-3">
                                Uploaded: @slot.LastModified.Value.ToString("yyyy-MM-dd HH:mm UTC")
                            </p>
                        }

                        @* Smart View Live Page link *@
                        var instrLiveUrl = slot.EntryFile != null
                            ? $"{serviceBase}/sites/website{Model.SiteNumber}/{slot.Name}/{slot.EntryFile}"
                            : $"/instructor/site/{Model.SiteNumber}/page/{slot.Name}/files?asurite={asurite}";
                        var instrTarget = slot.EntryFile != null ? "_blank" : "_self";
                        var instrLabel = slot.EntryFile != null ? "View Live Page" : "Browse Files to View";
                        <div class="d-grid gap-2">
                            <a href="@instrLiveUrl" target="@instrTarget" class="btn btn-success btn-sm">
                                @instrLabel
                            </a>
                            <a href="/instructor/site/@(Model.SiteNumber)/page/@(slot.Name)/files?asurite=@asurite"
                               class="btn btn-primary btn-sm">
                                Browse Files
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="card-text text-muted small">No content uploaded.</p>
                    }
                </div>
            </div>
        </div>
    }
</div>
